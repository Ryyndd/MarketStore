<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".main.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GuideKiriAtas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="45dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GuideKananAtas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="45dp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="3dp"
            android:text="Profile Details"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas"
            app:layout_constraintTop_toTopOf="parent" />


        <HorizontalScrollView
            android:id="@+id/layoutProfile"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="296dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="25dp"
                            android:layout_width="100dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            app:cardCornerRadius="100dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ferry"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ferry"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="296dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="25dp"
                            android:layout_width="100dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            app:cardCornerRadius="100dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/yola"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Yola"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="296dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="25dp"
                            android:layout_width="100dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            app:cardCornerRadius="100dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/triani"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Triani"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="296dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="25dp"
                            android:layout_width="100dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            app:cardCornerRadius="100dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ikhsan"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ikhsan"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/txtAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas"
            app:layout_constraintTop_toBottomOf="@id/layoutProfile"
            android:textSize="24sp"
            android:textColor="@color/primary_black"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/underline"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:cardElevation="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/blue"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas"
            app:layout_constraintTop_toBottomOf="@id/txtAbout"/>

        <TextView
            android:id="@+id/txtLorem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary_black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/underline"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas"
            android:justificationMode="inter_word"/>

        <LinearLayout
            android:id="@+id/layoutLoginAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/btnLogout"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login As"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primary_black"
                android:layout_marginEnd="2dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="username"
                android:layout_marginStart="2dp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="10dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintStart_toStartOf="@id/GuideKiriAtas"
            app:layout_constraintEnd_toEndOf="@id/GuideKananAtas"
            app:layout_constraintTop_toBottomOf="@+id/txtLorem"
            app:layout_constraintBottom_toBottomOf="parent"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>